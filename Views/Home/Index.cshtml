    <script>
        const form = document.querySelector("#sendMail");

        form.addEventListener("submit", function (e) {

            var adSoyad = document.getElementById("nameSurname").value;
            var eMail = document.getElementById("email").value;
            var subject = "berkucdagcom - Hakkımda - " + document.getElementById("subject").value;
            var message = document.getElementById("msg").value;
            e.preventDefault();
            var obj = {}
            obj.NameSurname = adSoyad;
            obj.Email = eMail;
            obj.Message = message;
            obj.Subject = subject;
            $.ajax({
                type: "post",
                url: "/Home/SendMail",
                data: obj,
                success: function (reponse) {
                    Swal.fire({
                        position: 'mid',
                        icon: 'success',
                        title: 'Mesajını Aldım. Teşekkürler :)',
                        showConfirmButton: false,
                        timer: 2000
                    })
                    setTimeout(() => { window.location.reload() }, 2000);
                },
                error: function (err) {
                    console.log("hata");
                    console.log(err.statusText);
                }
            });


        });
