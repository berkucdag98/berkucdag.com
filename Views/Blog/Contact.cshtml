@{
    Layout = "~/Views/Shared/_Blog.cshtml";
}

<div class="heading-page header-text">
    <section class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-content">
                        <h4>İLETİŞİME GEÇELİM</h4>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>



<section class="contact-us">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="down-contact">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="sidebar-item contact-form">
                                <div class="sidebar-heading">
                                    <h2>Mesaj Gönder</h2>
                                </div>
                                <div class="content">
                                    <form id="sendMail" method="post">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <input name="nameSurname" type="text" id="nameSurname" placeholder="Ad Soyad" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-6 col-sm-12">
                                                <fieldset>
                                                    <input name="email" type="email" id="email" placeholder="Email" required="">
                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-sm-12">
                                                <fieldset>
                                                    <input name="subject" type="text" id="subject" placeholder="Konu">
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <textarea name="msg" rows="6" id="msg" placeholder="Mesaj..." required=""></textarea>
                                                </fieldset>
                                            </div>
                                            <div class="col-lg-12">
                                                <fieldset>
                                                    <button type="submit" id="form-submit" class="main-button">Gönder</button>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="sidebar-item contact-information">
                                <div class="sidebar-heading">
                                    <h2>İletişim Bilgileri</h2>
                                </div>
                                <div class="content">
                                    <ul>
                                        <li>
                                            <h5>+90 542 211 03 01</h5>
                                            <span>TELEFON</span>
                                        </li>
                                        <li>
                                            <h5>berkda3@gmail.com</h5>
                                            <span>EMAIL</span>
                                        </li>
                                        <li>
                                            <h5>
                                                Istanbul/Turkey
                                            </h5>
                                            <span>ADRES</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
        const form = document.querySelector("#sendMail");

        form.addEventListener("submit", function (e) {

            var adSoyad = document.getElementById("nameSurname").value;
            var eMail = document.getElementById("email").value;
            var subject = "berkucdagcom - Blog - " + document.getElementById("subject").value;
            var message = document.getElementById("msg").value;
            e.preventDefault();
            var obj = {}
            obj.NameSurname = adSoyad;
            obj.Email = eMail;
            obj.Message = message;
            obj.Subject = subject;
            $.ajax({
                type: "post",
                url: "/Home/SendMail",
                data: obj,
                success: function (reponse) {
                    Swal.fire({
                        position: 'mid',
                        icon: 'success',
                        title: 'Mesajını Aldım. Teşekkürler :)',
                        showConfirmButton: false,
                        timer: 2000
                    })
                    setTimeout(() => { window.location.reload() }, 2000);
                },
                error: function (err) {
                    console.log("hata");
                    console.log(err.statusText);
                }
            });


        });
</script>